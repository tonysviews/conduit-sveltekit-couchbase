{
  "name": "SvelteKit & Couchbase Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "conduit-app",
  "workspaceFolder": "/workspace",

  "features": {},

  "forwardPorts": [5173, 24678, 8091, 8092, 8093, 8094, 8095, 8096, 11210],

  "postCreateCommand": "npm install",

  "customizations": {
    "vscode": {
      "extensions": [
        "svelte.svelte-vscode",
        "dbaeumer.vscode-eslint",
        "YoavBls.pretty-ts-errors",
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "Postman.postman-for-vscode"
      ]
    }
  },

  "secrets": {
    "COUCHBASE_SERVER": {
      "description": "sample value -> couchbase:localhost"
    },
    "COUCHBASE_BUCKET": {
      "description": "sample value -> realworld"
    },
    "COUCHBASE_SCOPE": {
      "description": "sample value -> conduit"
    },
    "COUCHBASE_USER": {
      "description": "sample value -> cbuser"
    },
    "COUCHBASE_PASSWORD": {
      "description": "sample value -> cbPwd123!"
    },
    "COUCHBASE_ADMIN": {
      "description": "sample value -> cbadmin"
    },
    "COUCHBASE_ADMIN_PASSWORD": {
      "description": "sample value -> cbPwd1234!"
    },
    "ACCESS_TOKEN_SECRET": {
      "description": "sample value -> Sup3rSecre7"
    } 
  },

  "remoteUser": "node"
}